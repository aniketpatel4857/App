<%- include('./partials/header.ejs') %>
<div class="logincontainer flex items-center justify-center w-full min-h-screen p-4">
    <div class="loginpanel bg-white p-6 rounded-md shadow-md w-full max-w-sm">
        <h3 class="text-2xl mb-3 text-center">Login</h3>
        <form autocomplete="off" action="/login" class="flex flex-col gap-4" method="post">
            <input class="block px-3 py-2 border border-zinc-200 rounded-md w-full" type="text"
                placeholder="Email or Username" name="email">
            <input class="block px-3 py-2 border border-zinc-200 rounded-md w-full" type="password"
                placeholder="Password" name="password">
            <input class="block px-4 py-2 bg-blue-500 rounded-md text-white w-full cursor-pointer" type="submit" value="Login">
        </form>
        <a class="mt-5 inline-block text-blue-500 text-center block" href="/register">Don't have an account?</a>
    </div>
</div>
<%- include('./partials/footer.ejs') %>
